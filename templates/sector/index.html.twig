{% extends 'base.html.twig' %}

{% block title %}Sector index{% endblock %}

{% block body %}
    <h1>Sector index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sector in sectors %}
            <tr>
                <td>{{ sector.id }}</td>
                <td>{{ sector.name }}</td>
                <td>{{ sector.code }}</td>
                <td>
                    <a href="{{ path('app_sector_show', {'id': sector.id}) }}" class="btn btn-info">Mostrar</a>
                    <a href="{{ path('app_sector_edit', {'id': sector.id}) }}" class="btn btn-warning">Alterar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sector_new') }}" class="btn btn-primary">Novo</a>
{% endblock %}
