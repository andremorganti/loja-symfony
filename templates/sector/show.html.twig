{% extends 'base.html.twig' %}

{% block title %}Sector{% endblock %}

{% block body %}
    <h1>Sector</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sector.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sector.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ sector.code }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_sector_index') }}" class="btn btn-secondary">Voltar</a>

    <a href="{{ path('app_sector_edit', {'id': sector.id}) }}" class="btn btn-warning">Alterar</a>

    {{ include('sector/_delete_form.html.twig') }}
{% endblock %}
