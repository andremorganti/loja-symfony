{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Legal_name</th>
                <td>{{ customer.legalName }}</td>
            </tr>
            <tr>
                <th>Cnpj</th>
                <td>{{ customer.cnpj }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ customer.startDate ? customer.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Net_revenue</th>
                <td>{{ customer.netRevenue }}</td>
            </tr>
            <tr>
                <th>Ebtida</th>
                <td>{{ customer.ebtida }}</td>
            </tr>
            <tr>
                <th>Employees</th>
                <td>{{ customer.employees }}</td>
            </tr>
            <tr>
                <th>Info_year</th>
                <td>{{ customer.infoYear }}</td>
            </tr>
            <tr>
                <th>Corporation_structure</th>
                <td>{{ customer.corporationStructure }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_customer_index') }}" class="btn btn-secondary">Voltar</a>

    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="btn btn-warning">Alterar</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
